<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.CardPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.safespot.fx.controllers.frontDonListe">
    <left>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <TextField fx:id="fullnameTextField" promptText="Full Name" />
            <ComboBox fx:id="investissementsComboBox" promptText="Select Investissement" />
            <TextField fx:id="tauxTextField" promptText="Taux (%)" />
            <TextField fx:id="montantTextField" promptText="Montant (DT)" />

            <HBox spacing="10">
                <Label text="Etat:" />
                <RadioButton fx:id="etatTrueRadioButton" text="True">
                    <toggleGroup>
                        <ToggleGroup fx:id="etatToggleGroup" />
                    </toggleGroup></RadioButton>
                <RadioButton fx:id="etatFalseRadioButton" text="False" toggleGroup="$etatToggleGroup" />
            </HBox>
        </VBox>
    </left>
    <center>
        <VBox spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <TextField fx:id="searchTextField" onKeyReleased="#search" promptText="Rechercher..." />
            <CardPane fx:id="listDons" prefHeight="300.0" prefWidth="426.0">
                <HBox.margin>
                    <Insets bottom="30.0" top="30.0" />
                </HBox.margin>
            </CardPane>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
            <Button fx:id="btnSave" onAction="#save" style="-fx-background-color: green; -fx-text-fill: white;" text="Add" />
            <Button fx:id="btnListeInv" onAction="#gotoListInv" style="-fx-background-color: blue; -fx-text-fill: white;" text="Liste Investissements" />
        </HBox>
    </bottom>
</BorderPane>
